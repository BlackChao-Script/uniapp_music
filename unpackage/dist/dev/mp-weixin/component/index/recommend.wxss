.recommend {
  margin-left: 20rpx;
}
.recommend .recommend_title {
  display: flex;
  justify-content: space-between;
  padding: 5rpx;
}
.recommend .recommend_title .title_name {
  font-size: 35rpx;
  font-weight: 700;
}
.recommend .recommend_title .title_more {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  color: #ccc;
}
.recommend .recommend_list {
  margin-top: 10rpx;
  display: flex;
}
.recommend .recommend_list .list_pic {
  flex: 1;
}
.recommend .recommend_list .list_pic image {
  width: 80%;
  border-radius: 20rpx;
}
.recommend .recommend_list .list_name {
  flex: 2;
  display: flex;
  flex-direction: column;
}
.recommend .recommend_list .list_name .name_a {
  font-size: 32rpx;
  font-weight: 500;
}
.recommend .recommend_list .list_name .name_b {
  margin-top: 40rpx;
  color: #adadad;
  font-size: 28rpx;
}
.recommend .recommend_list .list_icon {
  flex: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #adadad;
}

