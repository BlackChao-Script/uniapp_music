.songlistdetailed {
  background-image: linear-gradient(to top, #fcf5ee 0%, #ffc4d0 100%);
}
.songlistdetailed .songlistdetailed_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background-image: linear-gradient(to top, #ffc4d0 0%, #fbe8e7 100%);
}
.songlistdetailed .songlistdetailed_title .title_pic {
  position: relative;
  margin-left: 20rpx;
  flex: 2;
}
.songlistdetailed .songlistdetailed_title .title_pic image {
  width: 100%;
  border-radius: 20rpx;
}
.songlistdetailed .songlistdetailed_title .title_pic .item_playCount {
  position: absolute;
  bottom: 20rpx;
  right: 10rpx;
  color: #fff;
  font-size: 25rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
.songlistdetailed .songlistdetailed_title .title_names {
  margin-left: 20rpx;
  flex: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.songlistdetailed .songlistdetailed_title .title_names .names_title {
  margin-bottom: 40rpx;
  font-weight: 600;
}
.songlistdetailed .songlistdetailed_title .title_names .names_name {
  font-size: 28rpx;
}
.songlistdetailed .songlistdetailed_list {
  height: 100rpx;
  margin: 20rpx;
  display: flex;
  align-items: center;
}
.songlistdetailed .songlistdetailed_list .list_index {
  flex: 0.5;
  margin-left: 20rpx;
}
.songlistdetailed .songlistdetailed_list .title_names {
  flex: 4;
  display: flex;
  flex-direction: column;
}
.songlistdetailed .songlistdetailed_list .title_names .names_user {
  color: #ccc;
}

